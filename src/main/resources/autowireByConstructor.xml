<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="specification" class="com.example.autowire.constructor.Specification">
        <property name="make" value="Ford"/>
        <property name="model" value="Ranger"/>
    </bean>

    <bean id="myCar" class="com.example.autowire.constructor.type.Car" autowire="constructor"/>

</beans>